vec4 cloud_color()
{	
	float h = 2.0 - pos.y;
	return vec4(0.1*h, 0.2*h, 0.4*h, 1.0);
}

vec4 mtn_color()
{
	vec2 loc = vec2(gl_FragCoord.x, 0.0) + seed;
	float base = snoise(loc/1500.0);
	float detail = snoise(loc/100.0)/10.0;
	float jitter = snoise(loc/3.0)/60.0;
	float green = snoise(vec2(gl_FragCoord) / 50.0) + 1.0;
	
	if(((pos.y*2.0) + detail + jitter ) >= base)
		return vec4(0.1, (0.05 * green) + 0.15, 0.2, 1.0);
	else
		return vec4(-1.0);
}


